<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
 
   
    <div class="row">
 
        <% for(let i of products){ %>
        
            
          <div class="col-lg-4 mt-3">
            <div class="card shadow mx-auto" style="width: 18rem;">
                <img src="<%= i.img %> " class="card-img-top" alt="">
                <div class="card-body">
                  <h2 class="card-title"><%= i.name %></h2>
                  <h5 class="card-price"><%= i.price %></h5>

                  <p class="card-text"><%= i.desc %></p>
                  <a href="/products/<%= i._id %> " class="btn btn-info">View Product</a>
                  <form  class="d-inline-block" action="/products/<%= i._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete Product</button>
                </form> 
                </div>
              </div>
            
          </div>
     
             <% } %>
            </div>
    
    <!-- bootstrap for js script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
