<body>
  
   
        <h1>DIsplay all the blogs </h1>
    
        <section>
        <% for(let i of comments){ %>
            <div>
            <h1>ID is <%= i.id %></h1>
            <h2>Name is: <%= i.username %></h2>
            <h3>Comment is: <%= i.comment %></h3>
            <a href="/blogs/<%= i.id %>">Show me</a>
            <!-- for a particular i have a anchor tag  -->
       
       </div>
       <% } %>
   </section>
    
</body>
